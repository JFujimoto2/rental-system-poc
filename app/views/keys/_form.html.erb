<%= form_with(model: key) do |form| %>
  <% if key.errors.any? %>
    <div class="error-messages">
      <h2><%= key.errors.count %>件のエラーがあります</h2>
      <ul>
        <% key.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :room_id %>
    <%= form.select :room_id, Room.includes(:building).map { |r| ["#{r.building.name} #{r.room_number}", r.id] }, prompt: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :key_type %>
    <%= form.select :key_type, Key.key_types.keys.map { |s| [I18n.t("activerecord.enums.key.key_type.#{s}"), s] }, include_blank: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :key_number %>
    <%= form.text_field :key_number %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Key.statuses.keys.map { |s| [I18n.t("activerecord.enums.key.status.#{s}"), s] }, include_blank: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4 %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
