<% content_for :title, "部屋一覧" %>

<div class="page-header">
  <h1>部屋一覧</h1>
  <div class="page-header-actions">
    <%= link_to "CSV ダウンロード", rooms_path(format: :csv, q: @search_params.to_h), class: "btn" %>
    <%= link_to "新規部屋登録", new_room_path, class: "btn btn-primary" %>
  </div>
</div>

<%= form_with(url: rooms_path, method: :get, class: "search-form", data: { turbo_action: "replace" }) do |form| %>
  <div class="search-fields">
    <div class="search-field">
      <label>建物</label>
      <%= form.select "q[building_id]", Building.order(:name).pluck(:name, :id), { include_blank: "すべて" }, { value: @search_params[:building_id] } %>
    </div>
    <div class="search-field">
      <label>部屋番号</label>
      <%= form.text_field "q[room_number]", value: @search_params[:room_number] %>
    </div>
    <div class="search-field">
      <label>状態</label>
      <%= form.select "q[status]", Room.statuses.keys.map { |s| [I18n.t("activerecord.enums.room.status.#{s}"), s] }, { include_blank: "すべて" }, { value: @search_params[:status] } %>
    </div>
    <div class="search-field">
      <label>間取り</label>
      <%= form.text_field "q[room_type]", value: @search_params[:room_type] %>
    </div>
    <div class="search-actions">
      <%= form.submit "検索", class: "btn btn-primary" %>
      <%= link_to "クリア", rooms_path, class: "btn" %>
    </div>
  </div>
<% end %>

<p class="search-result-count"><%= @rooms.size %>件</p>

<table>
  <thead>
    <tr>
      <th>建物</th>
      <th>部屋番号</th>
      <th>階数</th>
      <th>間取り</th>
      <th>面積</th>
      <th>賃料</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.building.name, room.building %></td>
        <td><%= link_to room.room_number, room %></td>
        <td><%= room.floor %></td>
        <td><%= room.room_type %></td>
        <td><%= "#{room.area} ㎡" if room.area %></td>
        <td><%= number_to_currency(room.rent, unit: "¥", precision: 0) if room.rent %></td>
        <td><%= room.status_label %></td>
        <td class="actions">
          <%= link_to "編集", edit_room_path(room) %>
          <%= button_to "削除", room, method: :delete, class: "btn-link btn-danger", data: { turbo_confirm: "#{room.room_number} を削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
