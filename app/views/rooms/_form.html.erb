<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div class="error-messages">
      <h2><%= room.errors.count %>件のエラーがあります</h2>
      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :building_id %>
    <%= form.collection_select :building_id, Building.order(:name), :id, :name, prompt: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :room_number %>
    <%= form.text_field :room_number %>
  </div>

  <div class="field">
    <%= form.label :floor %>
    <%= form.number_field :floor %>
  </div>

  <div class="field">
    <%= form.label :room_type %>
    <%= form.text_field :room_type %>
  </div>

  <div class="field">
    <%= form.label :area %>
    <%= form.number_field :area, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Room.statuses.keys.map { |s| [I18n.t("activerecord.enums.room.status.#{s}"), s] }, include_blank: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4 %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
