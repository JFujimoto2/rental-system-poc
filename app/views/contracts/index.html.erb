<% content_for :title, "契約一覧" %>

<div class="page-header">
  <h1>契約一覧</h1>
  <div class="page-header-actions">
    <%= link_to "CSV ダウンロード", contracts_path(format: :csv, q: @search_params.to_h), class: "btn" %>
    <%= link_to "新規契約登録", new_contract_path, class: "btn btn-primary" %>
  </div>
</div>

<%= form_with(url: contracts_path, method: :get, class: "search-form", data: { turbo_action: "replace" }) do |form| %>
  <div class="search-fields">
    <div class="search-field">
      <label>建物名</label>
      <%= form.text_field "q[building_name]", value: @search_params[:building_name] %>
    </div>
    <div class="search-field">
      <label>入居者名</label>
      <%= form.text_field "q[tenant_name]", value: @search_params[:tenant_name] %>
    </div>
    <div class="search-field">
      <label>状態</label>
      <%= form.select "q[status]", Contract.statuses.keys.map { |s| [I18n.t("activerecord.enums.contract.status.#{s}"), s] }, { include_blank: "すべて" }, { value: @search_params[:status] } %>
    </div>
    <div class="search-field">
      <label>借家種別</label>
      <%= form.select "q[lease_type]", Contract.lease_types.keys.map { |s| [I18n.t("activerecord.enums.contract.lease_type.#{s}"), s] }, { include_blank: "すべて" }, { value: @search_params[:lease_type] } %>
    </div>
    <div class="search-actions">
      <%= form.submit "検索", class: "btn btn-primary" %>
      <%= link_to "クリア", contracts_path, class: "btn" %>
    </div>
  </div>
<% end %>

<p class="search-result-count"><%= @contracts.size %>件</p>

<table>
  <thead>
    <tr>
      <th>建物</th>
      <th>部屋</th>
      <th>入居者</th>
      <th>借家種別</th>
      <th>契約開始日</th>
      <th>契約終了日</th>
      <th>月額賃料</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= link_to contract.room.building.name, contract.room.building %></td>
        <td><%= link_to contract.room.room_number, contract.room %></td>
        <td><%= link_to contract.tenant.name, contract.tenant %></td>
        <td><%= contract.lease_type_label %></td>
        <td><%= contract.start_date %></td>
        <td><%= contract.end_date %></td>
        <td><%= number_to_currency(contract.rent, unit: "¥", precision: 0) if contract.rent %></td>
        <td><%= contract.status_label %></td>
        <td class="actions">
          <%= link_to "詳細", contract %>
          <%= link_to "編集", edit_contract_path(contract) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
