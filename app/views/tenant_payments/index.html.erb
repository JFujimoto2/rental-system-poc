<% content_for :title, "テナント入金一覧" %>

<div class="page-header">
  <h1>テナント入金一覧</h1>
  <div class="page-header-actions">
    <%= link_to "CSV ダウンロード", tenant_payments_path(format: :csv, q: @search_params.to_h), class: "btn" %>
    <%= link_to "新規入金登録", new_tenant_payment_path, class: "btn btn-primary" %>
  </div>
</div>

<%= form_with(url: tenant_payments_path, method: :get, class: "search-form", data: { turbo_action: "replace" }) do |form| %>
  <div class="search-fields">
    <div class="search-field">
      <label>入居者名</label>
      <%= form.text_field "q[tenant_name]", value: @search_params[:tenant_name] %>
    </div>
    <div class="search-field">
      <label>状態</label>
      <%= form.select "q[status]", TenantPayment.statuses.keys.map { |s| [I18n.t("activerecord.enums.tenant_payment.status.#{s}"), s] }, { include_blank: "すべて" }, { value: @search_params[:status] } %>
    </div>
    <div class="search-field">
      <label>入金方法</label>
      <%= form.select "q[payment_method]", TenantPayment.payment_methods.keys.map { |s| [I18n.t("activerecord.enums.tenant_payment.payment_method.#{s}"), s] }, { include_blank: "すべて" }, { value: @search_params[:payment_method] } %>
    </div>
    <div class="search-field">
      <label>期日（開始）</label>
      <%= form.date_field "q[due_date_from]", value: @search_params[:due_date_from] %>
    </div>
    <div class="search-field">
      <label>期日（終了）</label>
      <%= form.date_field "q[due_date_to]", value: @search_params[:due_date_to] %>
    </div>
    <div class="search-actions">
      <%= form.submit "検索", class: "btn btn-primary" %>
      <%= link_to "クリア", tenant_payments_path, class: "btn" %>
    </div>
  </div>
<% end %>

<p class="search-result-count"><%= @tenant_payments.size %>件</p>

<table>
  <thead>
    <tr>
      <th>入居者</th>
      <th>部屋</th>
      <th>入金期日</th>
      <th>請求金額</th>
      <th>入金額</th>
      <th>状態</th>
      <th>入金方法</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tenant_payments.each do |tp| %>
      <tr>
        <td><%= link_to tp.contract.tenant.name, tp.contract.tenant %></td>
        <td><%= link_to "#{tp.contract.room.building.name} #{tp.contract.room.room_number}", tp.contract.room %></td>
        <td><%= tp.due_date %></td>
        <td><%= number_to_currency(tp.amount, unit: "¥", precision: 0) %></td>
        <td><%= number_to_currency(tp.paid_amount, unit: "¥", precision: 0) if tp.paid_amount %></td>
        <td><%= tp.status_label %></td>
        <td><%= tp.payment_method_label %></td>
        <td class="actions">
          <%= link_to "詳細", tp %>
          <%= link_to "編集", edit_tenant_payment_path(tp) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
