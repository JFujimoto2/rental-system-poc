<% content_for :title, "#{@tenant_payment.contract.tenant.name} - テナント入金詳細" %>

<p class="notice"><%= notice %></p>

<h1><%= @tenant_payment.contract.tenant.name %> — テナント入金詳細</h1>

<table class="detail-table">
  <tr><th>転貸借契約</th><td><%= link_to "#{@tenant_payment.contract.room.building.name} #{@tenant_payment.contract.room.room_number}", @tenant_payment.contract %></td></tr>
  <tr><th>入居者</th><td><%= link_to @tenant_payment.contract.tenant.name, @tenant_payment.contract.tenant %></td></tr>
  <tr><th>入金期日</th><td><%= @tenant_payment.due_date %></td></tr>
  <tr><th>請求金額</th><td><%= number_to_currency(@tenant_payment.amount, unit: "¥", precision: 0) %></td></tr>
  <tr><th>入金額</th><td><%= number_to_currency(@tenant_payment.paid_amount, unit: "¥", precision: 0) if @tenant_payment.paid_amount %></td></tr>
  <tr><th>入金日</th><td><%= @tenant_payment.paid_date %></td></tr>
  <tr><th>状態</th><td><%= @tenant_payment.status_label %></td></tr>
  <tr><th>入金方法</th><td><%= @tenant_payment.payment_method_label %></td></tr>
  <tr><th>備考</th><td><%= @tenant_payment.notes %></td></tr>
</table>

<div class="actions-bar">
  <%= link_to "編集", edit_tenant_payment_path(@tenant_payment), class: "btn" %>
  <%= link_to "一覧に戻る", tenant_payments_path, class: "btn" %>
  <%= button_to "削除", @tenant_payment, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "この入金情報を削除しますか？" } %>
</div>
