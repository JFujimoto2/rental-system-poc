<% content_for :title, @owner.name %>

<p class="notice"><%= notice %></p>

<h1><%= @owner.name %></h1>

<table class="detail-table">
  <tr><th>オーナー名カナ</th><td><%= @owner.name_kana %></td></tr>
  <tr><th>電話番号</th><td><%= @owner.phone %></td></tr>
  <tr><th>メールアドレス</th><td><%= @owner.email %></td></tr>
  <tr><th>郵便番号</th><td><%= @owner.postal_code %></td></tr>
  <tr><th>住所</th><td><%= @owner.address %></td></tr>
  <tr><th>備考</th><td><%= @owner.notes %></td></tr>
</table>

<h2>口座情報</h2>

<table class="detail-table">
  <tr><th>銀行名</th><td><%= @owner.bank_name %></td></tr>
  <tr><th>支店名</th><td><%= @owner.bank_branch %></td></tr>
  <tr><th>口座種別</th><td><%= @owner.account_type %></td></tr>
  <tr><th>口座番号</th><td><%= @owner.account_number %></td></tr>
  <tr><th>口座名義</th><td><%= @owner.account_holder %></td></tr>
</table>

<div class="actions-bar">
  <%= link_to "編集", edit_owner_path(@owner), class: "btn" %>
  <%= link_to "一覧に戻る", owners_path, class: "btn" %>
  <%= button_to "削除", @owner, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "#{@owner.name} を削除しますか？" } %>
</div>

<h2>所有建物</h2>

<% if @owner.buildings.any? %>
  <table>
    <thead>
      <tr>
        <th>建物名</th>
        <th>住所</th>
        <th>構造</th>
        <th>部屋数</th>
      </tr>
    </thead>
    <tbody>
      <% @owner.buildings.each do |building| %>
        <tr>
          <td><%= link_to building.name, building %></td>
          <td><%= building.address %></td>
          <td><%= building.building_type %></td>
          <td><%= building.rooms.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>所有建物が登録されていません。</p>
<% end %>

<h2>マスターリース契約</h2>

<% if @owner.master_leases.any? %>
  <table>
    <thead>
      <tr>
        <th>建物</th>
        <th>契約形態</th>
        <th>契約開始日</th>
        <th>契約終了日</th>
        <th>保証賃料</th>
        <th>状態</th>
      </tr>
    </thead>
    <tbody>
      <% @owner.master_leases.includes(:building).each do |ml| %>
        <tr>
          <td><%= link_to ml.building.name, ml.building %></td>
          <td><%= ml.contract_type_label %></td>
          <td><%= ml.start_date %></td>
          <td><%= ml.end_date %></td>
          <td><%= number_to_currency(ml.guaranteed_rent, unit: "¥", precision: 0) if ml.guaranteed_rent %></td>
          <td><%= link_to ml.status_label, ml %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>マスターリース契約がありません。</p>
<% end %>
