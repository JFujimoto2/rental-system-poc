<div class="page-header">
  <h1>承認待ち一覧</h1>
  <div class="page-header-actions">
    <%= link_to "自分の申請一覧", my_requests_approvals_path, class: "btn" %>
  </div>
</div>

<p class="search-result-count"><%= @approvals.size %>件</p>

<% if @approvals.any? %>
  <table>
    <thead>
      <tr>
        <th>承認対象</th>
        <th>内容</th>
        <th>申請者</th>
        <th>申請日時</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @approvals.each do |approval| %>
        <tr>
          <td><%= approval.approvable_type == 'Contract' ? '転貸借契約' : approval.approvable_type %></td>
          <td><%= approvable_summary(approval.approvable) %></td>
          <td><%= approval.requester.name %></td>
          <td><%= l(approval.requested_at, format: :short) if approval.requested_at %></td>
          <td><span class="status-badge status-<%= approval.status %>"><%= approval.status_label %></span></td>
          <td><%= link_to "詳細", approval_path(approval) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="empty-message">承認待ちの申請はありません。</p>
<% end %>
