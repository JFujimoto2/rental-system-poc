<%= form_with(model: tenant) do |form| %>
  <% if tenant.errors.any? %>
    <div class="error-messages">
      <h2><%= tenant.errors.count %>件のエラーがあります</h2>
      <ul>
        <% tenant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :name_kana %>
    <%= form.text_field :name_kana %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="form-group">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="form-group">
    <%= form.label :emergency_contact %>
    <%= form.text_field :emergency_contact %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, rows: 4 %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
